<Window x:Class="SRXMDL.Download.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRXMDL.Download"
        mc:Ignorable="d"
        Title="Download Options" Height="500" Width="600"
        Background="#0A0B1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Row button style to mimic flat list items -->
        <Style x:Key="NeonRowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Row" Background="Transparent" CornerRadius="0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Row" Property="Background" Value="#1F1B3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Row" Property="Background" Value="#181430"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Row" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Reuse the same color resources from MainWindow -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0A0B1E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A1B3A"/>
        <SolidColorBrush x:Key="CardHover" Color="#252649"/>
        <SolidColorBrush x:Key="GlassBackground" Color="#2A2B5A"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#00D4FF"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A1A1AA"/>
        <SolidColorBrush x:Key="TextMuted" Color="#71717A"/>

        <!-- Glass Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.8">
                        <GradientStop Color="#1A1B3A" Offset="0"/>
                        <GradientStop Color="#2A2B5A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#00D4FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.4" BlurRadius="20" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Download Option Card Style -->
        <Style x:Key="DownloadOptionCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1B3A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A2B5A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252649"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7C3AED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1B3A"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A2B5A"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource GlassCard}" Padding="18,12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Width="42" Height="42" CornerRadius="10" Background="#2A1F51" VerticalAlignment="Center">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Foreground="#F7B500"/>
                </Border>
                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="Download presets" 
                           Foreground="{StaticResource TextPrimary}" 
                               FontSize="16" 
                           FontWeight="Bold"
                               Margin="0,0,0,2"/>
                    <TextBlock Text="Pick a preset to start the download" 
                           Foreground="{StaticResource TextSecondary}"
                               FontSize="12"/>
            </StackPanel>
                <Button Grid.Column="2" Content="Close" Click="CloseButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        Background="{StaticResource AccentRed}"
                        Padding="10,6"/>
            </Grid>
        </Border>

        <!-- Filename Input -->
        <Border Grid.Row="1" Style="{StaticResource GlassCard}" Padding="16,12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                <TextBlock Text="Output filename (optional)" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"/>
                    <TextBlock Text="Base name only; suffix + .wav are added" 
                               Foreground="{StaticResource TextMuted}"
                               FontSize="10"/>
                </StackPanel>
                <TextBox x:Name="OutputFilenameTextBox"
                         Grid.Column="1"
                         Style="{StaticResource ModernTextBox}"
                         Text=""
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         Margin="10,0,0,0"/>

                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                    <TextBlock Text="Format" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    <ComboBox x:Name="FormatComboBox" Width="140" SelectedIndex="0">
                        <ComboBoxItem Content="MP3" IsSelected="True"/>
                        <ComboBoxItem Content="WAV"/>
                        <ComboBoxItem Content="MP4"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Download Options -->
        <Border Grid.Row="2" Style="{StaticResource GlassCard}" Padding="0" Margin="0,0,0,12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                    <!-- Standard list-style rows inspired by the reference -->
                    <!-- Low -->
                    <Button Style="{StaticResource NeonRowButton}" Click="LowQualityDownload_Click" Padding="14,10" Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="8" Background="#F59E0B" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Low Quality" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="8-bit • 22.05 kHz • Mono" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </StackPanel>
                            <TextBlock Grid.Column="2" Text="Voice" Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                    </Button>

                    <!-- Standard -->
                    <Button Style="{StaticResource NeonRowButton}" Click="StandardQualityDownload_Click" Padding="14,10" Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="8" Background="#06B6D4" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Standard Quality" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="16-bit • 44.1 kHz • Stereo" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </StackPanel>
                            <TextBlock Grid.Column="2" Text="Default" Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                    </Button>

                    <!-- High -->
                    <Button Style="{StaticResource NeonRowButton}" Click="HighQualityDownload_Click" Padding="14,10" Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="8" Background="#8B5CF6" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="High Quality" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="24-bit • 48 kHz • Stereo" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </StackPanel>
                            <TextBlock Grid.Column="2" Text="Broadcast" Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                    </Button>

                    <!-- Highest -->
                    <Button Style="{StaticResource NeonRowButton}" Click="HighestQualityDownload_Click" Padding="14,10" Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="8" Background="#EC4899" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Highest Quality" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock Text="32-bit • 96 kHz • Stereo" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </StackPanel>
                            <TextBlock Grid.Column="2" Text="Mastering" Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                    </Button>
            </StackPanel>
        </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Style="{StaticResource GlassCard}" Padding="16,12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Quality label + .wav are added automatically."
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Close" 
                        Style="{StaticResource PrimaryButton}"
                        Background="{StaticResource AccentRed}"
                        Padding="10,6"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
