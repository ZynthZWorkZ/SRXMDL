<Window x:Class="SRXMDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRXMDL"
        mc:Ignorable="d"
        Title="SiriusXM Monitor" Height="720" Width="720"
        Background="#0A0B1E"
        ResizeMode="CanResize"
        MinHeight="420"
        MinWidth="680">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Status Indicator Animation -->
        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="1" To="0.3" Duration="0:0:1"
                AutoReverse="True"/>
        </Storyboard>
        
        <!-- Compact Color Palette -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0A0B1E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A1B3A"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#00D4FF"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A1A1AA"/>
        <SolidColorBrush x:Key="TextMuted" Color="#71717A"/>
        
        <!-- Custom ScrollBar Style -->
        <Style x:Key="{x:Type ScrollBar}" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="#4B4B4B" 
                                           BorderThickness="0" 
                                           Margin="0,2,0,2">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6366F1"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollViewer Style -->
        <Style x:Key="{x:Type ScrollViewer}" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                     Grid.Column="1" 
                                     Grid.Row="0"
                                     Orientation="Vertical"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                     Grid.Column="0"
                                     Grid.Row="1"
                                     Orientation="Horizontal"
                                     Value="{TemplateBinding HorizontalOffset}"
                                     Maximum="{TemplateBinding ScrollableWidth}"
                                     ViewportSize="{TemplateBinding ViewportWidth}"
                                     Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Compact Glass Card -->
        <Style x:Key="CompactCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.9">
                        <GradientStop Color="#1A1B3A" Offset="0"/>
                        <GradientStop Color="#2A2B5A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#333355"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="8" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Compact Primary Button -->
        <Style x:Key="CompactPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7C3AED"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Action Button -->
        <Style x:Key="CompactActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact ListView -->
        <Style x:Key="CompactListView" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Compact ListViewItem -->
        <Style x:Key="CompactListViewItem" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <GridViewRowPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2B5A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1A6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact GridViewColumnHeader -->
        <Style x:Key="CompactGridViewColumnHeader" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Status Indicator -->
        <Style x:Key="CompactStatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Fill" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10B981" Opacity="0.6" BlurRadius="4" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" Style="{StaticResource CompactCard}" Padding="16,12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title Section -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <Border Width="4" Height="4" Background="{StaticResource AccentBlue}" CornerRadius="2" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="SiriusXM Monitor" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Text="Stream monitoring" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"/>
                </StackPanel>
                
                <!-- Total Count -->
                <Border Grid.Column="1" Background="#1A10B981" CornerRadius="6" Padding="12,6">
                    <StackPanel>
                        <TextBlock Text="Total" Foreground="{StaticResource TextSecondary}" FontSize="9"/>
                        <TextBlock x:Name="TotalCapturedCount" Text="0" Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Compact Control Panel -->
        <Border Grid.Row="1" Style="{StaticResource CompactCard}" Padding="16,12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="StartButton" 
                            Content="▶ Start" 
                            Click="StartButton_Click" 
                            Style="{StaticResource CompactPrimaryButton}"
                            Margin="0,0,8,0"/>
                    <Button x:Name="StopButton" 
                            Content="⏹ Stop" 
                            Click="StopButton_Click" 
                            Style="{StaticResource CompactPrimaryButton}"
                            Background="{StaticResource AccentRed}"
                            IsEnabled="False"
                            Margin="0,0,8,0"/>
                    <Button x:Name="ResetCookiesButton"
                            Content="Reset Cookies"
                            Click="ResetCookiesButton_Click"
                            Style="{StaticResource CompactActionButton}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator" 
                            Width="8" 
                            Height="8" 
                            Fill="{StaticResource AccentRed}"
                            Margin="0,0,6,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#EF4444" Opacity="0.6" BlurRadius="4" ShadowDepth="0"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock x:Name="ConnectionStatus" 
                               Text="Not Active" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Compact Stream Data Table -->
        <Border Grid.Row="2" Style="{StaticResource CompactCard}" Padding="0" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Compact Table Header -->
                <Border Grid.Row="0" Background="#1A1B3A" CornerRadius="8,8,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Stream Activity" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"/>
                        <Button Grid.Column="1"
                                Content="Clear"
                                Click="ClearStreams_Click"
                                Style="{StaticResource CompactActionButton}"
                                Background="{StaticResource AccentRed}"
                                BorderBrush="{StaticResource AccentRed}"
                                Foreground="White"
                                Padding="12,4"/>
                    </Grid>
                </Border>
                
                <!-- Compact Data Grid -->
                <ListView Grid.Row="1" 
                          x:Name="StreamListView" 
                          Style="{StaticResource CompactListView}"
                          ItemContainerStyle="{StaticResource CompactListViewItem}"
                          Padding="4">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource CompactGridViewColumnHeader}">
                            <GridViewColumn Header="TIME" Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                   Foreground="{StaticResource TextPrimary}"
                                                   FontFamily="Consolas"
                                                   FontSize="10"
                                                   FontWeight="Medium"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="TYPE" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource AccentPurple}" 
                                                CornerRadius="8" 
                                                Padding="6,2">
                                            <TextBlock Text="{Binding StreamType}" 
                                                       Foreground="White"
                                                       FontSize="8"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="TRACK" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TrackName}" 
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontFamily="Consolas"
                                                       FontSize="10"
                                                       FontWeight="Medium"/>
                                            <TextBlock Text="{Binding ArtistName}" 
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontFamily="Consolas"
                                                       FontSize="9"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="ACTIONS" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Copy" 
                                                    Click="CopyButton_Click" 
                                                    Style="{StaticResource CompactActionButton}"
                                                    Margin="0,0,4,0"/>
                                            <Button Content="Play" 
                                                    Click="PlayButton_Click" 
                                                    Style="{StaticResource CompactActionButton}"
                                                    Background="{StaticResource AccentGreen}"
                                                    BorderBrush="{StaticResource AccentGreen}"
                                                    Foreground="White"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding CanPlay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <Button Content="Save" 
                                                    Style="{StaticResource CompactActionButton}"
                                                    Background="{StaticResource AccentBlue}"
                                                    BorderBrush="{StaticResource AccentBlue}"
                                                    Foreground="White"
                                                    Click="DownloadButton_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Artist Section -->
        <Border Grid.Row="3" Style="{StaticResource CompactCard}" Padding="0" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Compact Table Header -->
                <Border Grid.Row="0" Background="#1A1B3A" CornerRadius="8,8,0,0" Padding="12,8">
                    <TextBlock Text="Artist Section" 
                               Foreground="{StaticResource TextPrimary}" 
                               FontSize="13" 
                               FontWeight="SemiBold"/>
                </Border>
                
                <!-- Compact Data Grid -->
                <ListView Grid.Row="1" 
                          x:Name="ArtistListView" 
                          Style="{StaticResource CompactListView}"
                          ItemContainerStyle="{StaticResource CompactListViewItem}"
                          Padding="4">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource CompactGridViewColumnHeader}">
                            <GridViewColumn Header="" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="40" Height="40" CornerRadius="4" ClipToBounds="True">
                                            <Image Source="{Binding ThumbnailUrl}" 
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="ARTIST" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Artist}" 
                                                   Foreground="{StaticResource TextPrimary}"
                                                   FontFamily="Consolas"
                                                   FontSize="10"
                                                   FontWeight="Medium"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="ARTIST STATION URL" Width="400">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ArtistStationUrl}" 
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontFamily="Consolas"
                                                   FontSize="9"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding ArtistStationUrl}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="ACTIONS" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="▶ Play" 
                                                    Click="PlayArtistStation_Click" 
                                                    Style="{StaticResource CompactActionButton}"
                                                    Background="{StaticResource AccentGreen}"
                                                    BorderBrush="{StaticResource AccentGreen}"
                                                    Foreground="White"
                                                    Margin="0,0,4,0"
                                                    IsEnabled="{Binding CanPlay}"/>
                                            <Button Content="☆ Favorite" 
                                                    Click="ToggleFavorite_Click" 
                                                    Foreground="White"
                                                    Margin="0,0,4,0">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource CompactActionButton}">
                                                        <Setter Property="Background" Value="#374151"/>
                                                        <Setter Property="BorderBrush" Value="#374151"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                <Setter Property="Background" Value="#F59E0B"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="Content" Value="★ Favorited"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Compact Status Footer -->
        <Border Grid.Row="4" Style="{StaticResource CompactCard}" Padding="16,8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1A10B981" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                        <TextBlock Text="Ready" 
                                   Foreground="White"
                                   FontSize="9"
                                   FontWeight="Medium"/>
                    </Border>
                    <TextBlock x:Name="StatusText" 
                               Text="Monitoring service ready" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="10"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Text="by Zano" 
                           Foreground="{StaticResource TextMuted}"
                           FontSize="9"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Now Playing Section -->
        <Border Grid.Row="5" Style="{StaticResource CompactCard}" Padding="0" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Album Art -->
                <Border Grid.Column="0" Margin="10" CornerRadius="4" ClipToBounds="True">
                    <Grid>
                    <Image x:Name="NowPlayingArt" Stretch="UniformToFill"/>
                        <Border Background="#80000000" Visibility="{Binding ElementName=NowPlayingArt, Path=Source, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock Text="&#xE8D6;" 
                                     FontFamily="Segoe MDL2 Assets" 
                                     FontSize="32" 
                                     Foreground="White" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Track Info and Controls -->
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Track Name -->
                    <TextBlock x:Name="NowPlayingTrack" 
                             Text="No track playing" 
                             Foreground="White" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,4"/>
                    
                    <!-- Station Name -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="&#xE8D6;" 
                                 FontFamily="Segoe MDL2 Assets" 
                                 FontSize="12" 
                                 Foreground="#B3B3B3" 
                                 Margin="0,0,4,0"/>
                    <TextBlock x:Name="NowPlayingStation" 
                             Text="No station selected" 
                             Foreground="#B3B3B3" 
                                 FontSize="14"/>
                    </StackPanel>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Bottom"
                              Margin="0,8,0,0">
                        <Button x:Name="SkipBackButton"
                                Click="SkipBackButton_Click"
                                MouseEnter="SkipBackButton_MouseEnter"
                                MouseLeave="SkipBackButton_MouseLeave"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Skip to previous track">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <Path x:Name="SkipBackIcon" 
                                          Data="M7.764 4.554a1 1 0 1 0-2 0v14.747a1 1 0 1 0 2 0v-5.15l9.01 5.635.006.003a1.64 1.64 0 0 0 2.498-1.363V5.574A1.64 1.64 0 0 0 16.78 4.21l-.007.004-9.009 5.634zM8.096 12l9.182-5.743v11.486z" 
                                          Fill="{StaticResource TextSecondary}"/>
                                </Grid>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource CompactActionButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#4B4B4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="PauseButton"
                                Click="PauseButton_Click"
                                MouseEnter="PauseButton_MouseEnter"
                                MouseLeave="PauseButton_MouseLeave"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Pause playback">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <!-- Pause Icon -->
                                    <Path x:Name="PauseIcon" 
                                          Data="M7 2.754a2 2 0 0 0-2 2v14.492a2 2 0 0 0 4 0V4.754a2 2 0 0 0-2-2m10 0a2 2 0 0 0-2 2v14.492a2 2 0 0 0 4 0V4.754a2 2 0 0 0-2-2" 
