<Window x:Class="SRXMDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRXMDL"
        mc:Ignorable="d"
        Title="SiriusXM Monitor" 
        Height="900"
        Width="1400"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        MinHeight="800"
        MinWidth="1200"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Enhanced Animations -->
        <Storyboard x:Key="StatusPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.4" Duration="0:0:1.2" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.4" Duration="0:0:1" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" 
                           From="8" To="20" Duration="0:0:2" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Premium Color Palette -->
        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0D0D0D" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E1E2E" Offset="0"/>
            <GradientStop Color="#2A2A3E" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF6B6B" Offset="0"/>
            <GradientStop Color="#4ECDC4" Offset="0.5"/>
            <GradientStop Color="#45B7D1" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#667EEA" Offset="0"/>
            <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="NeonCyan" Color="#00FFFF"/>
        <SolidColorBrush x:Key="NeonPink" Color="#FF1493"/>
        <SolidColorBrush x:Key="NeonGreen" Color="#39FF14"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B8BCC8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6C7293"/>

        <!-- Glassmorphism Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.15">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#FFFFFF" Offset="0.2"/>
                        <GradientStop Color="#000000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#000000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="25" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Neon Button Style -->
        <Style x:Key="NeonButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderBrush.(SolidColorBrush.Color)}" 
                                                Opacity="0.6" BlurRadius="15" ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderBrush.(SolidColorBrush.Color)}" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderBrush.(SolidColorBrush.Color)}" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradient Action Button -->
        <Style x:Key="GradientButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PurpleGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.4" BlurRadius="12" ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#7C8EF7" Offset="0"/>
                                            <GradientStop Color="#8B5BAF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListView -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Futuristic ListViewItem -->
        <Style x:Key="FuturisticListViewItem" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <GridViewRowPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.1">
                                            <GradientStop Color="#00FFFF" Offset="0"/>
                                            <GradientStop Color="#FF1493" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.2">
                                            <GradientStop Color="#667EEA" Offset="0"/>
                                            <GradientStop Color="#764BA2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Futuristic GridViewColumnHeader -->
        <Style x:Key="FuturisticGridViewColumnHeader" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeonCyan}"/>
            <Setter Property="Padding" Value="15,15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Neon Status Indicator -->
        <Style x:Key="NeonStatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="{StaticResource NeonGreen}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#39FF14" Opacity="0.8" BlurRadius="8" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter/>
                            <Border x:Name="GlowBorder" 
                                    Background="Transparent" 
                                    CornerRadius="25"
                                    Opacity="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00FFFF" 
                                                    Opacity="0.8" 
                                                    BlurRadius="15" 
                                                    ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="GlowBorder" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Play Button Style -->
        <Style x:Key="PlayButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Foreground" Value="#39FF14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter/>
                            <Border x:Name="GlowBorder" 
                                    Background="Transparent" 
                                    CornerRadius="25"
                                    Opacity="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#39FF14" 
                                                    Opacity="0.8" 
                                                    BlurRadius="15" 
                                                    ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="GlowBorder" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="#00FF00"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#4B4B4B"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Favorite Button Style -->
        <Style x:Key="FavoriteButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Foreground" Value="#FF1493"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF69B4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Info Button Style -->
        <Style x:Key="InfoButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Foreground" Value="#667EEA"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#7C8EF7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0D0D0D" Offset="0"/>
                <GradientStop Color="#1A1A2E" Offset="0.7"/>
                <GradientStop Color="#000000" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        
        <!-- Animated Background Elements -->
        <Canvas>
            <Ellipse Width="200" Height="200" Canvas.Left="100" Canvas.Top="50" Opacity="0.05">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00FFFF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="150" Height="150" Canvas.Right="80" Canvas.Bottom="100" Opacity="0.08">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF1493" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <Grid Margin="20">
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Background="{StaticResource CardGradient}" 
                    CornerRadius="20,20,0,0" 
                    Height="50" 
                    Margin="-20,-20,-20,0"
                    MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource NeonCyan}" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#00FFFF" Opacity="0.8" BlurRadius="8" ShadowDepth="0"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="SiriusXM Monitor" 
                                   Foreground="White" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="MinimizeButton" Content="—" Click="MinimizeButton_Click"
                                Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonCyan}"
                                Width="40" Height="30" Padding="0" FontSize="16" Margin="5,0"/>
                        <Button x:Name="MaximizeButton" Content="□" Click="MaximizeButton_Click"
                                Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonCyan}"
                                Width="40" Height="30" Padding="0" FontSize="14" Margin="5,0"/>
                        <Button x:Name="CloseButton" Content="✕" Click="CloseButton_Click"
                                Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonPink}"
                                Width="40" Height="30" Padding="0" FontSize="14" Margin="5,0,15,0"/>
                </StackPanel>
                </Grid>
            </Border>

            <!-- Hero Header -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource GlassCard}" Padding="15,8" Margin="0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SIRIUSXM" 
                                   Foreground="{StaticResource AccentGradient}" 
                                   FontSize="12" 
                                   FontWeight="Black"
                                   Margin="0,0,0,2">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.5" BlurRadius="8" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Advanced Stream Monitor" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="10" 
                                   FontWeight="Light"/>
                </StackPanel>
                
                    <Border Grid.Column="1" Background="{StaticResource PurpleGradient}" 
                            CornerRadius="8" Padding="10,5">
                        <Border.Effect>
                            <DropShadowEffect Color="#667EEA" Opacity="0.6" BlurRadius="10" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="CAPTURED" Foreground="White" FontSize="8" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalCapturedCount" Text="0" Foreground="White" FontSize="14" FontWeight="Black" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

            <!-- Control Panel -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource GlassCard}" Padding="40,25" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="StartButton" Content="⚡ START MONITORING" Click="StartButton_Click" 
                                Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonGreen}"
                                Padding="30,15" FontSize="16" Margin="0,0,20,0" FontWeight="Bold">
                            <Button.Effect>
                                <DropShadowEffect Color="#39FF14" Opacity="0.8" BlurRadius="15" ShadowDepth="0"/>
                            </Button.Effect>
                        </Button>
                        <Button x:Name="StopButton" Content="⏹ STOP" Click="StopButton_Click" 
                                Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonPink}"
                                IsEnabled="False" Padding="25,15" FontSize="16" Margin="0,0,20,0"/>
                        <Button x:Name="ResetCookiesButton" Content="🔄 RESET" Click="ResetCookiesButton_Click"
                                Style="{StaticResource GradientButton}" Padding="25,15" FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Style="{StaticResource NeonStatusIndicator}"
                                Fill="{StaticResource NeonPink}" Margin="0,0,15,0"/>
                        <TextBlock x:Name="ConnectionStatus" Text="STANDBY" 
                                   Foreground="{StaticResource TextPrimary}" FontSize="16" FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

            <!-- Stream Data Table -->
            <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource GlassCard}" Padding="0" Margin="0,0,10,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                    <Border Grid.Row="0" Background="{StaticResource CardGradient}" 
                            CornerRadius="20,20,0,0" Padding="30,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <TextBlock Text="🎵 STREAM ACTIVITY" 
                                   Foreground="{StaticResource TextPrimary}" 
                                       FontSize="20" FontWeight="Bold"/>
                            <Button Grid.Column="1" Content="CLEAR ALL" Click="ClearStreams_Click"
                                    Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonPink}"
                                    Padding="20,10" FontSize="12"/>
                    </Grid>
                </Border>
                
                    <ListView Grid.Row="1" x:Name="StreamListView" 
                              Style="{StaticResource ModernListView}"
                              ItemContainerStyle="{StaticResource FuturisticListViewItem}"
                              Padding="15">
                    <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource FuturisticGridViewColumnHeader}">
                                <GridViewColumn Header="⏰ TIME" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                   Foreground="{StaticResource TextPrimary}"
                                                       FontFamily="JetBrains Mono, Consolas" FontSize="13" FontWeight="Medium"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                                <GridViewColumn Header="🎯 TYPE" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                            <Border Background="{StaticResource AccentGradient}" 
                                                    CornerRadius="12" Padding="12,6">
                                            <TextBlock Text="{Binding StreamType}" 
                                                           Foreground="White" FontSize="11" FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                                <GridViewColumn Header="" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Width="40" Height="40" CornerRadius="8" ClipToBounds="True">
                                                <Image Source="{Binding PreferredImageUrl}" 
                                                       Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border>
                                            <Border Width="40" Height="40" CornerRadius="8" 
                                                    Background="#80000000" 
                                                    Visibility="{Binding PreferredImageUrl, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                                                <TextBlock Text="&#xE8D6;" 
                                                         FontFamily="Segoe MDL2 Assets" 
                                                         FontSize="16" 
                                                         Foreground="White" 
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                                <GridViewColumn Header="🎶 TRACK INFO" Width="400">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TrackName}" 
                                                       Foreground="{StaticResource TextPrimary}"
                                                           FontSize="14" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ArtistName}" 
                                                   Foreground="{StaticResource TextSecondary}"
                                                           FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                                <GridViewColumn Header="⚡ ACTIONS" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                                <Button Content="📋" Click="CopyButton_Click" 
                                                        Style="{StaticResource GradientButton}"
                                                        ToolTip="Copy Info" Margin="0,0,8,0"/>
                                                <Button Content="▶️" Click="PlayButton_Click" 
                                                        Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonGreen}"
                                                        ToolTip="Play Track" Margin="0,0,8,0"
                                                    Visibility="{Binding CanPlay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <Button Content="💾" Click="DownloadButton_Click"
                                                        Style="{StaticResource NeonButton}" BorderBrush="{StaticResource NeonCyan}"
                                                        ToolTip="Save Track"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Artist Section -->
            <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource GlassCard}" Padding="0" Margin="10,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                    <Border Grid.Row="0" Background="{StaticResource CardGradient}" 
                            CornerRadius="20,20,0,0" Padding="30,20">
                        <TextBlock Text="🎨 ARTIST SECTION" 
                               Foreground="{StaticResource TextPrimary}" 
                                   FontSize="20" FontWeight="Bold"/>
                </Border>
                
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListView x:Name="ArtistListView" 
                                 Style="{StaticResource ModernListView}"
                                 Margin="15">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="280" Height="320" Margin="8" 
                                            Background="{StaticResource CardGradient}" 
                                            CornerRadius="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="200"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Artist Image -->
                                            <Border Grid.Row="0" CornerRadius="15,15,0,0" ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding ThumbnailUrl}" 
                                                           Stretch="UniformToFill"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                                    <Border Background="#80000000" 
                                                            Visibility="{Binding ThumbnailUrl, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                                                        <TextBlock Text="&#xE8D6;" 
                                                                 FontFamily="Segoe MDL2 Assets" 
                                                                 FontSize="40" 
                                                                 Foreground="White" 
                                                                 HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Artist Info and Controls -->
                                            <Grid Grid.Row="1" Margin="15">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Artist Name -->
                                                <TextBlock Text="{Binding Artist}" 
                                                           Foreground="{StaticResource TextPrimary}"
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,5"/>

                                                <!-- Artist Station URL -->
                                                <TextBlock Grid.Row="1" 
                                                           Text="{Binding ArtistStationUrl}" 
                                                           Foreground="{StaticResource TextSecondary}"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding ArtistStationUrl}"
                                                           Margin="0,0,0,10"/>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Row="2" 
                                                          Orientation="Horizontal" 
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Bottom">
                                                    <Button Content="&#x25B6;" 
                                                            Click="PlayArtistStation_Click" 
                                                            ToolTip="Play Station" 
                                                            Margin="0,0,12,0"
                                                            IsEnabled="True"
                                                            Style="{StaticResource PlayButtonStyle}"/>
                                                    <Button Click="ToggleFavorite_Click" 
                                                            ToolTip="Toggle Favorite" 
                                                            Margin="0,0,12,0">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource FavoriteButtonStyle}">
                                                                <Setter Property="Content" Value="&#x2B50;"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                        <Setter Property="Content" Value="&#x2605;"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                    <Button Content="&#x2139;" 
                                                            Click="ArtistInfoButton_Click"
                                                            ToolTip="Artist Info"
                                                            Margin="0,0,12,0"
                                                            Style="{StaticResource InfoButtonStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
            </Grid>
        </Border>

            <!-- Now Playing Section -->
            <Border Grid.Row="4" Grid.ColumnSpan="2" Style="{StaticResource GlassCard}" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Album Art -->
                <Border Grid.Column="0" Margin="8" CornerRadius="8" ClipToBounds="True">
                    <Grid>
                        <Image x:Name="NowPlayingArt" Stretch="UniformToFill" Width="100" Height="100"/>
                        <Border Background="#80000000" Visibility="{Binding ElementName=NowPlayingArt, Path=Source, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock Text="&#xE8D6;" 
                                     FontFamily="Segoe MDL2 Assets" 
                                     FontSize="20" 
                                     Foreground="White" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Track Info and Controls -->
                    <Grid Grid.Column="1" Margin="0,8,8,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Track Name -->
                    <TextBlock x:Name="NowPlayingTrack" 
                             Text="No track playing" 
                             Foreground="White" 
                                 FontSize="14" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,2"/>
                    
                    <!-- Station Name -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="&#xE8D6;" 
                                 FontFamily="Segoe MDL2 Assets" 
                                 FontSize="9" 
                                 Foreground="#B3B3B3" 
                                 Margin="0,0,4,0"/>
                    <TextBlock x:Name="NowPlayingStation" 
                             Text="No station selected" 
                             Foreground="#B3B3B3" 
                                 FontSize="11"/>
                    </StackPanel>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Bottom"
                              Margin="0,2,0,0">
                        <Button x:Name="SkipBackButton"
                                Click="SkipBackButton_Click"
                                MouseEnter="SkipBackButton_MouseEnter"
                                MouseLeave="SkipBackButton_MouseLeave"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Skip to previous track">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <Path x:Name="SkipBackIcon" 
                                          Data="M7.764 4.554a1 1 0 1 0-2 0v14.747a1 1 0 1 0 2 0v-5.15l9.01 5.635.006.003a1.64 1.64 0 0 0 2.498-1.363V5.574A1.64 1.64 0 0 0 16.78 4.21l-.007.004-9.009 5.634zM8.096 12l9.182-5.743v11.486z" 
                                          Fill="{StaticResource TextSecondary}"/>
                                </Grid>
                            </Button.Content>
                            <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NeonButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#4B4B4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="PauseButton"
                                Click="PauseButton_Click"
                                MouseEnter="PauseButton_MouseEnter"
                                MouseLeave="PauseButton_MouseLeave"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Pause playback">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <!-- Pause Icon -->
                                    <Path x:Name="PauseIcon" 
                                          Data="M7 2.754a2 2 0 0 0-2 2v14.492a2 2 0 0 0 4 0V4.754a2 2 0 0 0-2-2m10 0a2 2 0 0 0-2 2v14.492a2 2 0 0 0 4 0V4.754a2 2 0 0 0-2-2" 
                                          Fill="{StaticResource TextSecondary}"/>
                                    <!-- Play Icon -->
                                    <Path x:Name="PlayIcon" 
                                          Data="M20.692 10.702c1 .577 1 2.02 0 2.598L7.19 21.094a1.5 1.5 0 0 1-2.25-1.299V4.206a1.5 1.5 0 0 1 2.25-1.298z" 
                                          Fill="{StaticResource TextSecondary}"
                                          Visibility="Collapsed"/>
                                </Grid>
                            </Button.Content>
                            <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NeonButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#4B4B4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="ForwardButton"
                                Click="ForwardButton_Click"
                                MouseEnter="ForwardButton_MouseEnter"
                                MouseLeave="ForwardButton_MouseLeave"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Skip to next track">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <Path x:Name="ForwardIcon" 
                                          Data="M16.757 4.626a1 1 0 1 1 2 0v14.747a1 1 0 1 1-2 0v-5.15l-9.009 5.635-.006.004a1.64 1.64 0 0 1-2.498-1.363V5.646a1.64 1.64 0 0 1 2.498-1.364l.006.004 9.01 5.634zm-.331 7.446L7.243 6.329v11.486z" 
                                          Fill="{StaticResource TextSecondary}"/>
                                </Grid>
                            </Button.Content>
                            <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NeonButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#4B4B4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="LyricsButton"
                                Click="LyricsButton_Click"
                                IsEnabled="{Binding IsMonitoring}"
                                Margin="0,0,8,0"
                                ToolTip="Show lyrics">
                            <Button.Content>
                                <Grid Width="24" Height="24">
                                    <Path x:Name="LyricsIcon" 
                                          Data="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z" 
                                          Fill="{StaticResource TextSecondary}"/>
                                </Grid>
                            </Button.Content>
                            <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NeonButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#4B4B4B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                </StackPanel>
                </Grid>
            </Grid>
        </Border>

            <!-- Status Footer -->
            <Border Grid.Row="5" Grid.ColumnSpan="2" Background="Transparent" Padding="20,10" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource AccentGradient}" CornerRadius="8" Padding="8,4" Margin="0,0,12,0">
                            <TextBlock Text="READY" 
                                       Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                    <TextBlock x:Name="StatusText" 
                               Text="Monitoring service ready" 
                               Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                    <TextBlock Grid.Column="1" 
                               Text="by Zano" 
                           Foreground="{StaticResource TextMuted}"
                               FontSize="12"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        </Grid>
    </Grid>
</Window>