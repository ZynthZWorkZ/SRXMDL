<Window x:Class="SRXMDL.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="520"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0B0C12">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#121420"/>
        <SolidColorBrush x:Key="BorderBg" Color="#1F2230"/>
        <SolidColorBrush x:Key="Accent" Color="#2F80ED"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A1A1AA"/>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#11131A"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBg}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource CardBg}" CornerRadius="12" Padding="14" BorderBrush="{StaticResource BorderBg}" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Credentials" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Saved locally, password protected with Windows credentials." FontSize="12" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Background="{StaticResource CardBg}" CornerRadius="12" Padding="14" BorderBrush="{StaticResource BorderBg}" BorderThickness="1" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="Email" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                <TextBox x:Name="EmailBox" Style="{StaticResource InputBox}" Margin="0,4,0,8" />
                <TextBlock Text="Password" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                <PasswordBox x:Name="PasswordBox" Background="#11131A" Foreground="{StaticResource TextPrimary}" BorderBrush="{StaticResource BorderBg}" BorderThickness="1" Padding="10,8" FontSize="13" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Background="{StaticResource CardBg}" CornerRadius="12" Padding="14" BorderBrush="{StaticResource BorderBg}" BorderThickness="1" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="Reset" Width="90" Click="Reset_Click"
                        Background="{StaticResource BorderBg}" Foreground="{StaticResource TextPrimary}" BorderThickness="0" />
                <Button Content="Save" Style="{StaticResource PrimaryButton}" Width="120" Margin="10,0,0,0" Click="Save_Click"/>
                <Button Content="Close" Width="90" Margin="10,0,0,0" Click="Close_Click"
                        Background="{StaticResource BorderBg}" Foreground="{StaticResource TextPrimary}" BorderThickness="0" />
            </StackPanel>
        </Border>
        <Border Grid.Row="3" Background="Transparent" Padding="4" Margin="0,12,0,0">
            <TextBlock x:Name="StatusText" Text="Password is encrypted with your Windows account and stored in Login\cred.json."
                       Foreground="{StaticResource TextSecondary}" FontSize="11" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>

